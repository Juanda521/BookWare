@model tallerbiblioteca.Models.Sancion

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Sancion</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Devolucion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Devolucion.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Motivo_sancion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Motivo_sancion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha_Sancion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha_Sancion)
        </dd>
    </dl>
    
    <form asp-action="Delete" id="formulario" onsubmit="sendForm(event)">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="boton boton-danger" /> |
        <div>
            <button class="mt-2 botonDelete Deletemedium"> <a asp-action="Index">Regresar</a></button>
        </div>
    </form>
    @section Scripts{
        <script>
            function sendForm(e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Quieres eliminar esta sancion?',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'SI'
                }).then((resultado) => {
                    if (resultado.isConfirmed) {
                        const formulario = document.getElementById("formulario")
                        formulario.submit();
                    }
                })
            }
        </script>
    }
</div>
