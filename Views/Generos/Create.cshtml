@model tallerbiblioteca.Models.Genero

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Genero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreGenero" class="control-label"></label>
                <input asp-for="NombreGenero" class="form-control" />
                <span asp-validation-for="NombreGenero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="mt-2 mb-2" type="submit">Registrar</button>
            </div>
        </form>
    </div>
</div>

<div>
    <button><a asp-action="Index">Regresar</a></button>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@if (ViewData["Generocreado"] != null && ViewData["Generocreado"].ToString() == "true")
{
    <script>
        Swal.fire({
            position: 'center',
            icon: 'success',
            title: 'Genero Creado Con Exito',
            showConfirmButton: false,
            timer: 1500
        }).then(function () {
            window.location.href = '@Url.Action("Index", "Genero")';
        });
    </script>
}