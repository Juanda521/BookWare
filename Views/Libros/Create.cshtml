@model tallerbiblioteca.Models.Libro

@{
    ViewData["Title"] = "Create";
}


<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/habibmhamadi/multi-select-tag@2.0.1/dist/css/multi-select-tag.css">

<h1 class="d-flex justify-content-center">Registrar libro</h1>

<hr />

<div class="d-flex justify-content-center fs-4">
    <div class="card shadow-lg p-3 mb-5 bg-white rounded" style="width: 75%; font-size: 0.9em;">
        <div class="card-body">
            <form asp-action="Create" id="formularioLibros" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-2">
                    <label asp-for="Nombre" class="control-label required"></label>
                    <input asp-for="Nombre" id="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Descripcion" class="control-label required"></label>

                    <textarea rows="4" cols="50" asp-for="Descripcion" id="Descripcion" class="form-control"></textarea>

                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="row mt-2  fw-bold">
                    <div class="col-lg-6 col-12">

                        <div class="form-group mb-2">
                            <label for="GeneroIds" class="required">Géneros:</label>

                            <select asp-for="GeneroIds" name="GeneroIds" id="GeneroIds" asp-items="ViewBag.Generos"></select>
                        </div>

                    </div>
                    <div class="col-lg-6 col-12 ">
                        <div class="form-group">
                            <label for="AutorIds" class="required">Autores:</label>
                            <select asp-for="AutorIds" name="AutorIds" id="AutorIds" asp-items="ViewBag.Autores"></select>
                        </div>
                    </div>
                    <div id="errorGenero"></div>

                </div>

                @Html.Hidden("CantidadLibros",0)

                <div class="form-group mt-2">
                    <label asp-for="ImagenLibro" class="control-label required"></label>
                    <input type="file" asp-for="ImagenLibro" name="ImagenLibro" class="form-control" />
                </div>

                <div class="form-group mt-2 d-flex">
                    @* <button class="boton medium" type="submit">Registrar</button> *@
                    <button id="botonRegistrar" class="button col-lg-5 col-7 me-1" type="submit">Registrar</button>
                
                    <button class="Eliminar col-lg-5 ms-1 col-6"><a  asp-action="Index">Regresar</a></button>
                </div>
            </form>
        </div>
    </div>
</div>




<script src="https://cdn.jsdelivr.net/gh/habibmhamadi/multi-select-tag@2.0.1/dist/js/multi-select-tag.js"></script>

<script>
    new MultiSelectTag('GeneroIds', {
        tagColor: {
            textColor: '#fff',
            borderColor: '#0000',
            bgColor: '#1e6042',
        },
        onChange: function (values) {
            console.log(values);
        }
    });

    new MultiSelectTag('AutorIds', {
        tagColor: {
            textColor: '#fff',
            borderColor: '#0000',
            bgColor: '#1e6042',
        },
        onChange: function (values) {
            console.log(values);
        }
    });
</script>

@* <script src="~/js/Libros.js"> </script> *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @* <script src="~/js/Libros.js"> </script> *@


}
