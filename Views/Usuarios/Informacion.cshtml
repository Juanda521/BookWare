@model tallerbiblioteca.Models.usuarioo
<div class="container mt-5">
    <h1 class="fw-bold fs-1 text-center ">Información</h1>
    <div class="row">
        <div class="col-md-6">
            <div class="card rounded-lg shadow-sm border-0">
                <div class="card-header bg-light text-dark py-4">
                    <h4 class="my-0 font-weight-bold">Datos del usuario</h4>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-md-6 mt-3">
                                <div class="form-group">
                                    <label asp-for="Name" class="form-label fw-bold"></label>
                                    <input asp-for="Name" class="form-control" readonly />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Correo" class="form-label fw-bold"></label>
                                    <input asp-for="Correo" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col-md-6 mt-3">
                                <div class="form-group">
                                    <label asp-for="Apellido" class="control-label fw-bold"></label>
                                    <input asp-for="Apellido" class="form-control" readonly />
                                </div>  
                                <div class="form-group">
                                    <label class="control-label fw-bold">Número de documento</label>
                                    <input asp-for="Numero_documento" class="form-control" readonly />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
        <div class="col-md-6">
            <div class="card rounded-lg shadow-sm ">
                <div class="card-header  text-white py-4">
                    <h1 class="my-0 font-weight-bold" style="color: red">NOTAS</h1>
                </div>
                <div class="card-body p-4">
                    <h5 class="card-text">@Model.Mensaje</h5>
                    <h5 class="card-text">@Model.NombreLibro</h5>
                    <h5 class="card-text">@Model.fechaa</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-4">
        <a class="Eliminar" asp-action="Index">Volver</a>
    </div>
</div>
