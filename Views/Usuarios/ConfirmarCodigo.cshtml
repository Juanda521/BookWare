@model tallerbiblioteca.Models.Usuario;
@{
    ViewData["Title"] = "Confirmar codigo";
}
<div class="d-flex justify-content-center align-items-center vh-50">
    <div class="card shadow-lg " style="width: 30rem;">
        <div class="card-body">
            <h2 class="card-title text-center">Codigo confirmación</h2>
            <form asp-action="ConfirmarCodigo">
                <div class="col-mb-3">
                    <label for="correo" class="form-label required" >Codigo Confirmación</label>
                    <input type="number" class="form-control " id="codigo" name="codigo" placeholder="Ingresa codigo confirmación(5 digitos)" required>
                    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
                    {
                        <p class="text-danger">@ViewData["ErrorMessage"]</p>
                    }
                </div>
                <br>
                <div class="d-grid gap-2">
                    <button type="submit" class="button">Enviar</button>
                </div>
            </form>
            <a class="Eliminar d-block mt-3 text-center mt-3" asp-action="Recuperar">regresar</a>
        </div>
    </div>
</div>
<script src="sweetalert2.all.min.js"></script>
<link rel="stylesheet" href="sweetalert2.min.css">