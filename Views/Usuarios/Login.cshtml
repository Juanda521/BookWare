         <form id="loginForm">

         <h2>BookWare</h2>
            <h1 style="align-content:center">Iniciar sesión</h1>
            <label class="control-label text-dark required" for="numeroDocumento">Número de Documento:</label>
            <input type="text" style="background-color:white" class="form-control"  id="numeroDocumento" name="numeroDocumento">
            <span id="numeroDocumentoError" style="color: red;"></span>

            <label class="control-label text-dark required" for="contraseña">Contraseña:</label>
            <input type="password" style="background-color:white" class="form-control"  id="contraseña" name="contraseña">
            <span id="contraseñaError" style="color: red;"></span>

             <span id="errorSpan" style="color: red;"></span>
            <button style="background-color:white;" class="button" type="submit" value="Iniciar sesión"> Iniciar Sesión </button>
              <h1><a asp-area="" style="color:black;" asp-controller="Usuarios" asp-action="Recuperar">¿Has olvidado tu contraseña?</a></h1>
        </form>
        <div style="color:red;">
        @if (!string.IsNullOrEmpty(TempData["succesfullMessage"]?.ToString()))
        {
            <p style="color:red;" class="text-danger fs-5">@TempData["succesfullMessage"]</p>
            
        }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }

        </div>
    </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-right">
                    <img src="~/Images/Escudo.png" width="200px" height="250px"/><br />
                    <h6>¿Aún no tienes cuenta? </h6>
                    <p>Recuerda que para registrarte tienes que estar matriculado en la institución</p>
                <a class="regis" asp-controller="Usuarios" asp-action="Create">Registrate</a>
                    
                </div>
            </div>
