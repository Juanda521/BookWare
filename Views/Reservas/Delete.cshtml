@model tallerbiblioteca.Models.Reserva

@{
    ViewData["Title"] = "Rechazar";
}
<div >
    <h1 class="fw-bold fs-1 text-center" >Rechazar reserva</h1>
<h3>¿Seguro deseas rechazar esta reserva?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Ejemplar</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ejemplar.Libro.Nombre)
        </dd>
        <dt class = "col-sm-2">
            <p>Usuario</p>
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Usuario.Name),@Html.DisplayFor(model => model.Usuario.Apellido)
        </dd>
        <dt class = "col-sm-2">
            <p>Fecha</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaReserva)
        </dd>
   
    <form asp-action="Delete" class="mt-2">
        <input type="hidden" asp-for="Id" />
        <button class="Eliminar"  type="submit">Rechazar</button>
        
    </form>
    </div>
            <a class="button"  asp-action="Index">Volver</a>
</div>
